<!DOCTYPE html>
<html>
  <head>
    <title><%= @title ? @title : "WavHead" %></title>
    <link rel="stylesheet" type="text/css" href="/main.css">
    <script src="main.js"></script>
  </head>

  <body>

    <div id="header">
      <a href="/">WavHead</a>
      <a href="https://github.com/SHTheSuper/WavHead" class="githublink">(View on GitHub)</a>
    </div>

    <div id="masthead">

      <div id="sidebarcontainer">

        <div id="sidebar">
          Queue

          <% if @queue %>

          <% else %>
            No songs are queued.

          <% end %>
        </div>

      </div>

      <div id="content">
        <%= yield %>
      </div>

    </div>

    <div id="footerbuffer"></div>
    
    <div id="footer">
      <div id="footercontainer">

      <% if @current %>
        <div class="songprogress">
          <div class="progressbar"></div>
          <div class="progressbarfill"></div>
        </div>

        <div class="songtitle">
          <%= @current.song.title %>
        </div>

        <div class="artistalbumtitle">
          <%= @current.song.artist.title %> â€” <%= @current.song.album.title %>
        </div>

      <% else %>
        
        <div class="nothingplaying">
          Nothing is playing right now.
        </div>

      <% end %>

      </div>
    </div>
  </body>

</html>