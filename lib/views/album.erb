<div id="breadcrumbscontainer">
  <div id="breadcrumbs">
    <a href="/">WavHead</a> &gt; <a href="/browse/<%= @artist.title %>"><%= @artist.title %></a> &gt; <span class="boldbreadcrumb"><%= @album.title %></span>
  </div>
</div>

<div id="contentcontainer">
  <div id="albuminfocontainer">

    <div class="albumart">
      <% a = @album %>
      <% if a.art_path %>
        <img src="/cover/<%= @artist.title %>/<%= @album.title %>">

      <% else %>
        <img src="/nocover.png">

      <% end %>
    </div>

    <div class="albuminfo">
      <div class="albuminfoalbum">
        <%= @album.title %>
      </div>

      <div class="albuminfoartist">
        <a href="/browse/<%= @artist.title %>">
          <%= @artist.title %>
        </a>
      </div>
    </div>

  </div>

  <div class="artlistcontainer">
    <div class="artlist">
      <% @songs.sort{|x,y| x.track <=> y.track}.each do |s| %>
        <div class="songlistitem">
          <a href="/browse/<%= @artist.title %>/<%= @album.title %>/<%= s.title %>"><%= s.title %></a>
        </div>
      <% end %>
    </div>
  </div>
</div>